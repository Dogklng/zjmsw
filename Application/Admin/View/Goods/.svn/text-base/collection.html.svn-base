<script type="text/javascript">

    $('.btn_table_selectAll').click(function(){
        $('.table-ckbs').prop('checked',true);
    })

    //多选删除
    $('.del').click(function(){
        var ID ='';
        if($('.table-ckbs:checked').length ==0){
            alert('请选择要删除的数据');return false;
        }
        if(confirm('确定删除吗！')){
            $('.table-ckbs:checked').each(function(){
                ID = ID + $(this).attr("data-id") + ',';
            });
            ID = ID.substring(0,ID.length-1);
            $.post("{:U('Admin/Goods/delCollection')}",{'id':ID},function(data){
                if(data.status==1){
                    alert(data.info);
                    location.reload();
                }else{
                    alert(data.info);
                    location.reload();
                }
            },'json');
        }
    })

