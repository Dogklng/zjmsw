<div class="container">
    <div class="inner clearfix">
        <include file="Public:left" />

        <div class="content-right fl">
            <h1 class="content-right-title">财务配置详情</h1>
            <form action="" enctype="multipart/form-data" method="post" id="web_config_form" >
                <div class="panel-single panel-single-light mgt20">
                    <h3 class="cst_h3 mgb20">基本信息</h3>


                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>平台技术服务费比例：</label>
                     <div class="form-controls">
                            <input type="email" class="input xlarge" id="technology_fee" onkeyup="num(this)" name="technology_fee" value="{$cache.technology_fee}" placeholder="平台技术服务费比例">%
                            <span style="color: red;">请输入数字,会自动转换成百分数</span>
                        </div>
                    </div>

                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>佣金提成比例：</label>
                     <div class="form-controls">
                            <input type="email" class="input xlarge" id="yong_fee" onkeyup="num(this)" name="yong_fee" value="{$cache.yong_fee}" placeholder="佣金提成比例">%
                            <span style="color: red;">请输入数字,会自动转换成百分数</span>
                        </div>
                    </div>


                    <input type="hidden" name="num" class="input xlarge" id="num" onblur="value=value.replace(/[^0-9]/g,'')" onkeyup="value=value.replace(/[^0-9]/g,'')" maxlength="10" value="{$cache.num}">
                    <!--<div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>店铺推荐上限：</label>
                        <div class="form-controls">
                            <input type="text" name="num" class="input xlarge" id="num" onblur="value=value.replace(/[^0-9]/g,'')" onkeyup="value=value.replace(/[^0-9]/g,'')" maxlength="10" value="{$cache.num}">
                            <span style="color: red;"></span>
                        </div>
                    </div>-->



                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed">*</span>上次更新时间：</label>
                        <div class="form-controls">
                            {$cache.update_time|date="Y-m-d H:i:s",###}
                        </div>
                    </div>

                    <div class="panel-single panel-single-light mgt20 txtCenter">
                        <button class="btn btn-primary" id="btn-submit">保存</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- end content-right -->
    </div>
</div>

<!-- end container -->

<include file="Public:foot"/>

<script type="text/javascript" src="__JS__/jquery-form.js"></script>
