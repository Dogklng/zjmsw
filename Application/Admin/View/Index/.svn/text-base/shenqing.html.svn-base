  function del(obj){
      if(!confirm('确定删除吗?')){
          return false;
      }
      var id = $(obj).attr('data-id');
      $.ajax({
          url: "{:U('/Admin/Index/delShen')}",
          type: "post",
          dataType: "json",
          data: {
              id:id,
          },
          success:function(msg){
              if (msg.status==1){
                  alert( msg.info);
                  setTimeout(reload,1200);
              }else{
                  alert( msg.info);
              }
          }
      })
  }

  function reload() {
      location.reload();
  }
