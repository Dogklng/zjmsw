<include file="Public:head"/>
<div class="container">
  <div class="inner clearfix">
  <include file="Public:left" />
    <!-- end content-left -->
    
    <div class="content-right fl">
      <h1 class="content-right-title">修改密码</h1>
      <form action="" method="POST" name="form" onsubmit="return tijiao()">
         <div class="formitems">
          <label class="fi-name"><span class="colorRed">*</span>旧密码：</label>
          <div class="form-controls">
            <input type="password" class="input" onkeyup="value=value.replace(/\s/g,'')" id="oldpass" name="oldpass" value="">
            <span class="fi-help-text"></span> </div>
        </div>
        <div class="formitems">
          <label class="fi-name"><span class="colorRed">*</span>新密码：</label>
          <div class="form-controls">
            <input type="password" placeholder="密码不能少于6位数" class="input" onkeyup="value=value.replace(/\s/g,'')" name="password" value="">
            <span class="fi-help-text"></span> </div>
        </div>
        <div class="formitems">
          <label class="fi-name"><span class="colorRed">*</span>重复密码：</label>
          <div class="form-controls">
            <input type="password" class="input" placeholder="密码不能少于6位数" onkeyup="value=value.replace(/\s/g,'')" name="repass" value="">
            <span class="fi-help-text"></span> </div>
        </div>
        <div class="mgl120">
          <input type="submit" class="btn btn-primary" name="st" value="保存">
        </div>
      </form>
    </div>
    <!-- end content-right --> 
  </div>
</div>
    <script type="text/javascript" src="__JS__/jquery-form.js"></script>

<script>
function tijiao(){
	var psd=form.password.value;
	var psd1=form.repass.value;
	if(psd ==''){
		alert('密码不能为空！');
		form.password.focus();
		return false;
	}

    if (!psd.match(/^.{6,24}$/)) {
        alert("密码长度必须是6-24位！");
        return false;
    }

	if(psd1 != psd){
		alert('两次密码输入不一致！');
		form.repass.focus();
		return false;
	}
	return true;
	}
</script>
<!-- end container --> 
<include file="Public:foot"/>
<!--gonggao--> 
<script type="text/javascript">
  $(function(){
    $('#oldpass').blur(function(){
        var ids = $.trim($(this).val());
        if(ids == ''){
          alert('请输入旧密码');
          return false;
        }
        $.ajax({
          url:'/Admin/Index/updatepwd',
          type:'post',
          data:{id:ids},
          dataType:'json',
          success:function(g){
            //console.log(g);
            if(g.status == 0){
              alert(g.info);return false;
            }

          }
        })
    })
  })
</script>