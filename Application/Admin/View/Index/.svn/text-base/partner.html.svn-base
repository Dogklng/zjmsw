<script type="text/javascript">
    $(".BtnAddClass").click(function(){
        $('.addfenlei').show();
        $('#albums-overlay').show();
    })
</script>
<script type="text/javascript">
    $("#addcategory").click(function(){
        var pic = $('#addpic').val();  //父分类id
        var name = $(".addfenlei .name").val();
        var sort = $('.addfenlei .sort').val();
        var url = $('.addfenlei .url').val();
        if (!name) {
            alert("请填写名称");
            return false;
        }
        if (pic == '') {
            alert("请添加图片");
            return false;
        }
        $.ajax({
            url: "{:U('/Admin/Index/addPartner')}",
            type: "post",
            dataType: "json",
            data: {
                pic: pic,
                sort:sort,
                name:name,
                url:url
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
                window.location.reload();
            } else {
                alert(g.info);
            }
        })
    })
</script>
