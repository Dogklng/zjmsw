    })
    //
    //删除分类
    $('.j-delClass').click(function(){
        //alert('123');return false;
        var id = $(this).attr('data-id');
        $.ajax({
            url:"/Admin/Index/delPartner",
            data:{id:id},
            type:"post",
            dataType:"json",
            success:function(data){
                if(data.status==1){
