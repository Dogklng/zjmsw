                window.location.reload();
            } else {
                alert(g.info);
            }

        })
    })

    //多选删除
    $('.del').click(function(){
        var ID ='';
        if($('.check:checked').length ==0){
            alert('请选择要删除的数据');return false;
        }
        if(confirm('确定删除吗！')){
            $('.check:checked').each(function(){
                ID = ID + $(this).attr("data-id") + '_';
            });


            $.post("{:U('Admin/Index/delallbanner')}",{'id':ID},function(data){
