<include file="Public:foot"/>
<script>
  function chuli(obj){
      var id = $(obj).attr('data-id');
      ajax(id,'1');
  }

  function del(obj){
      if(!confirm('确定删除吗?')){
          return false;
      }
      var id = $(obj).attr('data-id');
      ajax(id,'0');
  }

  function ajax(id,lx) {
      $.ajax({
          url: "{:U('/Admin/Index/chuli')}",
          type: "post",
          dataType: "json",
          data: {
              id:id,
              lx:lx,
          },
          success:function(msg){
              if (msg.status==1){
                  alert( msg.info);
                  setTimeout(reload,1200);
              }else{
                  alert( msg.info);
              }
          }
      })
  }

  function reload() {
      location.reload();
  }
