<div class="container">
    <div class="inner clearfix">
        <include file="Public:left" />

        <div class="content-right fl">
            <h1 class="content-right-title">取消订单配置详情</h1>
            <form action="" enctype="multipart/form-data" method="post" id="web_config_form" >
                <div class="panel-single panel-single-light mgt20">
                    <h3 class="cst_h3 mgb20">基本配置信息</h3>

                    <input type="hidden" name="shid" value="{$cache.id}"/>
                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>取消订单：</label>
                     <div class="form-controls">
                            <input type="text" class="input xlarge" id="out_time" onkeyup="num(this)" name="out_time"
                                   value="{$cache.out_time}" placeholder="超过时间 取消订单">小时
                            <span style="color: red;"></span>
                        </div>
                    </div>

                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>自动确认收货时间：</label>
                     <div class="form-controls">
                            <input type="text" class="input xlarge" id="out_date" onkeyup="num(this)"
                                   name="out_date" value="{$cache.out_date}" placeholder="已发货 自动收货">天
                            <span style="color: red;"></span>
                        </div>
                    </div>
                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed"></span>自动完成：</label>
                        <div class="form-controls">
                            <input type="text" class="input xlarge" id="complete_date" onkeyup="num(this)"
                                   name="complete_date" value="{$cache.out_date}" placeholder="待评价 自动完成订单">天
                            <span style="color: red;"></span>
                        </div>
                    </div>

                    <div class="formitems">
                        <label class="fi-name"><span class="colorRed">*</span>上次更新时间：</label>
                        <div class="form-controls">
                            {$cache.update_time|date="Y-m-d H:i:s",###}
                        </div>
                    </div>

                    <div class="panel-single panel-single-light mgt20 txtCenter">
                        <button class="btn btn-primary" id="btn-submit">保存</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- end content-right -->
    </div>
</div>

<!-- end container -->

<include file="Public:foot"/>

<script type="text/javascript" src="__JS__/jquery-form.js"></script>
