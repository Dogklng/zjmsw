<script>
    function num(obj){
        obj.value = obj.value.replace(/[^\d.]/g,""); //清除"数字"和"."以外的字符
        obj.value = obj.value.replace(/^\./g,""); //验证第一个字符是数字
        obj.value = obj.value.replace(/\.{2,}/g,"."); //只保留第一个, 清除多余的
        obj.value = obj.value.replace(".","$#$").replace(/\./g,"").replace("$#$",".");
        obj.value = obj.value.replace(/^(\-)*(\d+)\.(\d\d).*$/,'$1$2.$3'); //只能输入两个小数
    }

    $("#btn-submit").click(function(){
        var out_time = $('#out_time').val();
        var out_date = $('#out_date').val();
        var complete_date = $('#complete_date').val();
       // / console.log(yong,technology);return false;

        var data = $("#web_config_form").serialize();
      
        $.post("{:U('/Admin/Order/editdsceshi')}", data, function(res){
            if(res['status']){
                dialog.showTips(res.info, "warn", function (){
                    window.location.reload();
                });
            }else{
                alert(data.info);
                return false;
            }
        })
        return false;

    })



</script>
