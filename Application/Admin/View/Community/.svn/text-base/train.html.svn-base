<include file="Public:head"/>
<link rel="stylesheet" href="../css/lists.css">

<div class="container">
    <div class="inner clearfix"> <include file="Public:left"/>
        <!-- end content-left -->

        <div class="content-right fl">
            <h1 class="content-right-title">培训列表</h1>
            <a href="{:U('/Admin/Community/addTrain')}" class="btn btn-success">发布培训</a>
            <form action="{:U('/Admin/Community/train')}" method="get">
                <div class="tabs clearfix mgt10">
                    <a href="{:U('/Admin/Community/train')}" class="<eq name="_GET['is_sale']" value="">active</eq> tabs_a fl">全部({$count})</a>
                    <a href="{:U('/Admin/Community/train/is_sale/2')}" class="<eq name="_GET['is_sale']" value="2">active</eq> tabs_a fl">出售中({$count1})</a>
                    <a href="{:U('/Admin/Community/train/is_sale/1')}" class="<eq name="_GET['is_sale']" value="1">active</eq> tabs_a fl">下架中({$count2})</a>
                    <a href="{:U('/Admin/Community/indeTrain')}?is_sale={$_GET['is_sale']}&type=1" class="btn btn-success fr">导出</a>
                </div>
            </form>
            <!-- end tabs -->

            <table class="wxtables mgt10 table-order" id="tb_3" style="text-align:center;">
                <thead>
                <tr class="po_list">
                    <td>培训信息</td>
                    <td>是否上架</td>
                    <td>排序</td>
                    <td>地点</td>
                    <td>操作<span></span></td>
                </tr>
                </thead>
                <tbody>
                <foreach name="res" item="vo">
                    <tr>
                        <td><div class="goodswrap"> <a href="javascript:void(0)" class="block" target="_blank" title="">
                            <div class="table-item-img"> <img src="{$vo['logo']}" alt=""> </div>
                            <div class="table-item-info" style="width: 100px">
                                <p style="height:auto">{$vo.title} <br/></p>
                            </div>
                        </a> </div></td>
                        <td><if condition="($vo.is_sale eq 1)"> 上架
                            <else/>
                            下架</if></td>

                        <td> {$vo.sort} </td>
                        <td>{$vo.address}</td>
                        <td>
                            <a href="{:U('/Admin/Community/editTrain/id')}/{$vo.id}" class="btn btn-primary j-editClass" title="修改">编辑</a>

                            <a href="javascript:;" class="btn change-is_sale <eq name="vo['is_sale']" value="0">btn-success<else />btn-danger</eq>" data-id="{$vo.id}"  title="上架"><eq name="vo['is_sale']" value="0">上架<else />下架</eq></a>

                            <a href="{:U('/Admin/Community/delTrain/id')}/{$vo.id}" onclick="{if(!confirm('确定删除吗?'))return false;} " class="btn j-delClass btn-warning" title="删除">删除</a>
                            <a href="{:U('/Admin/Community/trainlist/id')}/{$vo.id}" class="btn btn-primary" title="查看报名">查看报名</a>
                        </td>
                    </tr>
                </foreach>
                </tbody>
            </table>
            <!-- end wxtables -->
            <div class="tables-btmctrl clearfix">
                <div class="fl">
                    <div class="fr">
                        <div class="pages"> {$page} </div>
                        <!-- end paginate -->
                    </div>
                </div>
                <!-- end tables-btmctrl -->

            </div>
            <!-- end content-right -->
        </div>
    </div>
    <!-- end container -->
    <include file="Public:foot"/>
    <script>
        $(".change-is_sale").click(function (){
            var id   = $(this).attr("data-id");
            var item = "is_sale";
            $.post("{:U('Admin/Community/changeStatus3')}", {id:id,item:item}, function(data){
                if(data.status){
                    window.location.reload()
                }else{
                    alert(data.info);
                }
            }, "json")
        })
    </script>