<script type="text/javascript">
    function toVaild(){
        var goods_name = $('#goods_name').val();
        if(goods_name == ''){
            alert('作品名不能为空！');
            return false;
        }
        var desc = $('#desc').val();
        if(desc == ''){
            alert('作品描述不能为空！');
            return false;
        }
        var start = $('#start').val();
        if(start == ''){
            alert('起始时间不能为空！');
            return false;
        }
        var end = $('#end').val();
        if(end == ''){
            alert('结束时间不能为空！');
            return false;
        }
        if(start > end){
            alert('起始时间必须早于结束时间！');
            return false;
        }
        var total_price = $('#total_price').val();
        if(total_price == ''){
            alert('目标金额不能为空！');
            return false;
        }
        if(!total_price.match(/^[0-9]*$/)){
          alert('目标金额只能为数字！');
          return false;
        }
        var gz = $('#gz').val();
        if(gz == ''){
            alert('估值不能为空！');
            return false;
        }
        if(!gz.match(/^[0-9]*$/)){
          alert('估值只能为数字！');
          return false;
        }
        var crgf = $('#crgf').val();
        if(crgf == ''){
            alert('出让股份不能为空！');
            return false;
        }
        if(crgf >100){
                alert("出让股份不能大于100！");
                return false;
            }
        if(!crgf.match(/^[0-9]*$/)){
          alert('出让股份只能为数字！');
          return false;
        }
        var mini = $('#mini').val();
