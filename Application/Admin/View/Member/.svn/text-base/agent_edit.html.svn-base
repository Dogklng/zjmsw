<script type="text/javascript">
    function toVaild(){

        var title=$('#title').val();
        var original_price=$('#original_price').val();
        var price=$('#price').val();
        var num=$('#j-totalStock').val();
        var detail=$('#editor').text();
        if(title==''||title==null){
            alert('产品名称必填');
            return false;
        }
      if(price==''||price==0){
            alert('现价必填');
            return false;
        }
     if(original_price==''||original_price==0){
            alert('原价必填');
            return false;
        }
        if(num==''||num==null){
            alert('库存必填');
            return false;
        }
        if(detail==''||detail==null){
            alert('详情必填');
            return false;
        }


    }
</script>
<!--提交表单前验证end-->


