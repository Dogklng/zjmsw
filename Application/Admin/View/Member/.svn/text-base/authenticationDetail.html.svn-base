<include file="Public:head"/>

<style>
    .imgnav{
        max-height: 30px;
        overflow: hidden;
        cursor: pointer;
    }
    .imgwrapper{
        display: block;
        width: 78px;
        height: 78px;
        overflow: hidden;
    }
    .imgwrapper img{
        display: block;
        width: 100%;
        padding: 0;
        margin: 0;
        border:0;
    }
    #l-map{height:300px;width:100%;}
    .spanpd10{
        margin:10px;
    }
    .wxtables.wxtables-sku.newtable{
        width: 40%;
        margin: 0;
    }
    .img-list li{
        width: 60px;
        height:60px;
    }
    .cst_h3 span{font-weight: normal;}
</style>
<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=A607d61b18d43a1ff27abf4ac67da83c"></script>

<div class="container">
    <div class="inner clearfix">
        <include file="Public:left" />
        <!-- end content-left -->

        <div class="content-right fl">


            <h1 class="content-right-title">查看详情</h1>


            <input type="hidden" id="j-isSid" value="0"><!-- 是否选择了淘宝类目 -->
            <input type="hidden" id="j-hasNorms" value="1"><!-- 淘宝类目下是否有属性 -->
            <input type="hidden" id="supplier" value="">

           
                <div class="panel-single panel-single-light mgt20">
                    <h3 class="cst_h3 mgb20">基本信息</h3>
                <eq name="res.remind_type" value='0'> 
                    <div>

                        <div class="formitems">
                            <label class="fi-name">姓名：</label>
                            <div class="form-controls" style="padding-top:-5px">
                                {$res.name}
                                <span class="fi-help-text"></span>
                            </div>
                        </div>

                        <div class="formitems">
                            <label class="fi-name">手机号：</label>
                            <div class="form-controls" style="padding-top:-5px">{$res.tel}</div>
                        </div>
                        <div class="formitems">
                            <label class="fi-name">身份证号：</label>
                            <div class="form-controls" style="padding-top:-5px">{$res.cardid}</div>
                        </div>
                        <div class="formitems">
                            <label class="fi-name">地址：</label>
                            <div class="form-controls" style="padding-top:-5px">{$res.province}{$res.city}<eq name="res.district" value="请选择"><else />{$res.district}</eq>{$res.address}</div>
                        </div>
                        <div class="formitems">
                            <label class="fi-name">注册时间：</label>
                            <div class="form-controls" style="padding-top:-5px">{$res.addtime|date="Y-m-d",###}</div>
                        </div>
                        <div class="formitems">
                            <label class="fi-name">身份证(正面)：</label>
                            <div class="form-controls" style="padding-top:-5px"><a href="{$res.card_img}" target="_blank"><img onclick="imgs(this)" src="{$res.card_img}" width="50" alt=""></a></div>
                        </div>
                        <div class="formitems">
                            <label class="fi-name">身份证(反面)：</label>
                            <div class="form-controls" style="padding-top:-5px"><a href="{$res.card_img1}" target="_blank"><img onclick="imgs(this)" src="{$res.card_img1}" width="50" alt=""></a></div>
                        </div>



                    </div>
                </eq>
                <eq name="res.remind_type" value='1'>
                    <div>
                <div class="formitems">
                    <label class="fi-name">姓名：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        {$res.name}
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems" style="padding-top:-5px">
                    <label class="fi-name">手机号：</label>
                    <div class="form-controls" style="padding-top:-5px">{$res.tel}<span class="fi-help-text"></span></div>
                </div>
                <div class="formitems">
                    <label class="fi-name">证件类型：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        <if condition="$res.type eq 0">二代身份证</if>
                        <if condition="$res.type eq 1">临时身份证</if>
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems">
                    <label class="fi-name">身份证号：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        {$res.cardid}
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems">
                    <label class="fi-name">地址：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        {$res.address}
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems">
                    <label class="fi-name">身份证(正面)：</label>
                    <div class="form-controls" style="padding-top:-5px"><a href="{$res.card_img}" target="_blank"><img src="{$res.card_img}" width="50" alt=""></a></div>
                </div>
                <div class="formitems">
                    <label class="fi-name">身份证(反面)：</label>
                    <div class="form-controls" style="padding-top:-5px"><a href="{$res.card_img1}" target="_blank"><img src="{$res.card_img1}" width="50" alt=""></a></div>
                </div>
                
            </div>
        </div>
                </eq> 
                <eq name="res.remind_type" value='2'>   
                    <div class="formitems">
                    <label class="fi-name">单位营业执照号：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        {$res.business}
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems">
                    <label class="fi-name">单位营业执照图片：</label>
                    <div class="form-controls" style="padding-top:-5px"><a href="{$res.business_img}" target="_blank"><img src="{$res.business_img}" width="50" alt=""></a></div>
                </div>
                <div class="formitems">
                    <label class="fi-name">组织机构代码证号：</label>
                    <div class="form-controls" style="padding-top:-5px">
                        {$res.organize}
                        <span class="fi-help-text"></span>
                    </div>
                </div>
                <div class="formitems">
                    <label class="fi-name">组织机构代码证图片：</label>
                    <div class="form-controls" style="padding-top:-5px"><a href="{$res.organize_img}" target="_blank"><img src="{$res.organize_img}" width="50" alt=""></a></div>
                </div>
                </eq>
                </div>
                <!-- end 基本信息 -->


                <!-- end 详情及其它 -->


                <div class="panel-single panel-single-light mgt20 txtCenter">
                    <a href="javascript:history.back(-1)" class="btn">返回</a>
                    <!--<input type="submit" class="btn btn-primary" value="保存">-->
                </div>
    

        </div>
        <!-- end content-right -->
    </div>
</div>

<!-- end container -->

<include file="Public:foot"/>
<script>
    var rz = "{$res['remind_type']}";
    if(rz = 0){
        $('#rz2').attr('hidden',true);
        $('#rz3').attr('hidden',true);
        $('#rz1').attr('hidden',false);
        
    }
    if(rz = 1){
        $('#rz2').attr('hidden',false);        
        $('#rz3').attr('hidden',true);
        $('#rz1').attr('hidden',true);
    }
    if(rz = 2){
        $('#rz3').attr('hidden',false);        
        $('#rz2').attr('hidden',true);
        $('#rz1').attr('hidden',true);
    }
</script>




