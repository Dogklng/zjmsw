<script>
    $('#save').click(function () {
        var member_id = '{$name}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
            return false;
        }
        var tel  = $('#tel').val();
        var goods_id   = $(this).attr('data-id');
        if(tel == ''){
            alert('手机号必填');
            return false;
        }
        if(!(/^1[34578]\d{9}$/.test(tel))){
            alert('请输入正规手机号');
            return false;
        }
        $.ajax({
            url: "{:U('/Home/Auction/addRemind')}",
            type: "post",
            dataType: "json",
            data: {
                tel:  tel,
                goods_id:goods_id
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
            } else {
                alert(g.info);
            }

        })
    })
</script>
