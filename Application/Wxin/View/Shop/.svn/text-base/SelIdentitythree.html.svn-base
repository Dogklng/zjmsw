<script>
    $('#albums-overlay').click(function () {
        $('#img').hide();
        $('#albums-overlay').hide();
    })
    $('#img').click(function () {
        $('#img').hide();
        $('#albums-overlay').hide();
    })
    function fangda(obj) {
        var src = $(obj).find('img').attr('src');
        $('#albums-overlay').show();
        var str='<img src="'+src+'" width="100%" height="100%" >';
        $('#img').show();
        $('#img').html(str);
    }
</script>
