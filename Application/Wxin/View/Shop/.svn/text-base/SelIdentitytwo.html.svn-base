<style>
    #albums-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, .3);
        z-index: 998;
    }
    .disshow {
        display: none;
    }

    #img{
        position: fixed;
        top: 30%;
        left: 35%;
        width: 600px;
        height: 600px;
        z-index: 99999;
    }
</style>
<script>
    $('#albums-overlay').click(function () {
        $('#img').hide();
        $('#albums-overlay').hide();
    })
    $('#img').click(function () {
        $('#img').hide();
        $('#albums-overlay').hide();
    })
    function fangda(obj) {
        var src = $(obj).find('img').attr('src');
        $('#albums-overlay').show();
        var str='<img src="'+src+'" width="100%" height="100%" >';
        $('#img').show();
        $('#img').html(str);
    }
</script>
