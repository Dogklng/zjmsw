    $('#btn').click(function () {
       var  business = $('#business').val().trim();
         business = business.replace(/\s+/g,"");
       var organize = $('#organize').val().trim();
         organize = organize.replace(/\s+/g,"");
       var pic1 = $('#sfpic1').val();
        var pic2 = $('#sfpic2').val();
       if(business==""){
           alert("营业执照号必填");
           return false;
       }
        if(organize==""){
            alert("组织机构代码号必填");
            return false;
        }

       /*if(pic1 == undefined){
           alert("营业执照照片不能为空");
           return false;
        }*/
         if(pic2 == undefined){
           alert("组织机构照片不能为空");
           return false;
        }
        $.ajax({
            url: "{:U('/Wxin/Shop/selfSel')}",
            type: "post",
            dataType: "json",
            data: {
                business: business,
                organize:organize,
                pic1:pic1,
                pic2:pic2,
                remind_type:2,
                bus_status:3
            }
        }).done(function (g) {
            if (g.status == 1) {
               
                dialog.showTips(g.info , "warn", function () {
                    window.location.href = '/Wxin/PersonalCenter/userinfo';
                });
            } else if(g.status == 2){

                dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
                return false;
            }else {
                alert(g.info);
            }

        })

    })
