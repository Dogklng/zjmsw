<script>
  $('.nowbuy').click(function(){
    var headimg = "{$headimg}";
    if(headimg){
      var kucun = parseInt($('#kucun').val());
      var is_groom = $('#is_groom').val();
      if(is_groom == 1){
        if(!kucun){
          dialog.showTips("商品库存不足", "warn");
          return false;
        }
      }else{
        if(!kucun){
          dialog.showTips("该商品已租", "warn");
          return false;
        }
      }

      //判断是否有店铺的id 有就是店铺产品
      var artists_id = '{$artists_id}' ;
      //console.log(artists_id);return false;
      if(artists_id != 0){
        $('#artists_id').val(artists_id);
      }
      $('#buyform').submit();
    }else {
      dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
      return false;
    }
  });

  //加入购物车
  $('.addCart').click(function () {
    var member_id = '{$member_id}';
    if(member_id == 0){
      dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
      return false;
    }


    var goods_id = '{$res.id}';
    var cstore = '{$res.cstore}';
    var num = 1;
    $.ajax({
      url: "{:U('/Wxin/Products/addCart')}",
      type: "post",
      dataType: "json",
      data: {
        goods_id:goods_id,
        num:num,
        cstore:cstore,
        type:1,
        is_reed:0,
        reed_id:0,
      }
    }).done(function (g) {
      if (g.status == 1) {
        $(".cart_count_num").text(g.cartnum);
        dialog.showTips(g.info, "firm", function () {
          window.location.href=g.url;
        });
      } else {
        alert(g.info);
      }

    })
  })

  var member_id = '{$member_id}';
  if(member_id == 0){
    $('.price_A').show();
    $('.price').hide();
    $('.price1').hide();
    $('.zujin').hide();
    $('.Price-h4').hide();
  }else{
    $('.price_A').hide();
    $('.price').show();
    $('.price1').show();
    $('.zujin').show();
    $('.Price-h4').show();
  }
</script>
<script language="javascript">
$(document).ready(function() {
  $('.btn_like').click(function () {
    var member_id = '{$member_id}';
    if (member_id == 0) {
      dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
      return false;
    }
    var goods_id = $('input[name=id]').val();
    $.ajax({
      url: "{:U('Wxin/Products/ajaxSc')}",
      data: {
        goods_id: goods_id,
      },
      dataType: 'json',
      type: 'post',
      success: function (data) {
        if (data.status == 1) {
          var count = data.count;
          $('#count').html(count);
        }
      }
    })
    var s = $(this).find('i').attr('ss');
    if (s == 1) {
      $(this).find('i').attr('ss', '0').css({background: 'url(__IMAGES__/like.png) no-repeat center center'})
    } else {
      $(this).find('i').attr('ss', '1').css({background: 'url(__IMAGES__/likes.png) no-repeat center center'})
    }
  })
  $('.Like_T').click(function () {
    var member_id = '{$member_id}';
    if (member_id == 0) {
      dialog.showTips("请先注册，若有账号，请先登录！", "",'/Wxin/User/login');
      return false;
    }
    var goods_id = $('input[name=id]').val();
    $.ajax({
      url: "{:U('Wxin/Products/ajaxSc1')}",
      data: {
        goods_id: goods_id,
      },
      dataType: 'json',
      type: 'post',
      success: function (data) {
        if (data.status == 1) {
          var count1 = data.count1;
          $('#count1').html(count1);
          if ($('.Like_T').find('i').attr('ss') == 1) {
            $('.Like_T').find('i').attr('ss', '0').css({background: 'url(__IMAGES__/ .png) no-repeat center center'})
          } else {
            $('.Like_T').find('i').attr('ss', '1').css({background: 'url(__IMAGES__/like1.png) no-repeat center center'})
          }
        } else {
          alert(data.info);
        }
      }
    })

  })


  var like_collect = '{$like_collect}';
  if (like_collect == 0) {
    $('.btn_like i').css({background: 'url(__IMAGES__/like.png) no-repeat center center'});

  } else {
    $('.btn_like').find('i').attr('ss', '1');
    $('.btn_like i').css({background: 'url(__IMAGES__/likes.png) no-repeat center center'});
  }

  var recommend = '{$recommend}';
  if (recommend == 0) {
    $('.Like_T').find('i').attr('ss', '1');
    $('.Like_T i').css({background: 'url(__IMAGES__/like1.png) no-repeat center center'})

  } else {
    $('.Like_T i').css({background: 'url(__IMAGES__/like1s.png) no-repeat center center'})
  }
  var mySwiper = new Swiper('.swiper-container1', {
    pagination: '.pagination1',
    loop: true,
    grabCursor: true,
    autoplay: 5000,
    spaceBetween: 0,
    slidesPerGroup: 1,//设置几个一切换
    centeredSlides: true, //当前居中
    paginationClickable: true,
    autoplayDisableOnInteraction: false    //用户操作点的时候  停止自动切换
  })

})

