<include file="Public:header" />
<script type="text/javascript" src="__LHG__/lhgcore.min.js"></script>
<script type="text/javascript" src="__LHG__/lhgcalendar.min.js"></script>
<!--  / warpper  -->
<div class="warpper wrapper1" style="margin: 150px auto 80px;">
  
  <!--  / user  -->
  <div class="Selleruser">
    <div class="row">
      <div class="col-sm-2">
        <div class="user_left">
            <div class="user_tx">
              <div class="user_tx_img">
                <img src="images/user_tx.jpg" width="100">
              </div>
              <span>雕塑家 • 林岗</span>
              <a href="#">主页预览</a>
            </div>
            <div class="user_nav">
              <ul>
                <h5>信息管理</h5>
                <a href="#"><li class="user_nav_on">信息资料</li></a>
              </ul>
            </div>
        </div>  
      </div>
      <div class="col-sm-10">
       <div class="ysjglCon">
        <form  aciton="{:U('/Home/Gallery/ysjgl')}" enctype="multipart/form-data" method="post" id="add_step2" onsubmit="return toVaild()">
        <div class="hlCpadding">
         <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>主页名称：</h6>
          </div>
          <div class="hlCnr">
            <input type="text" name="zy_name"/>
           </div>
          </div>
          <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>您的姓名：</h6>
          </div>
          <div class="hlCnr">
            <input type="text" name="name"/>
           </div>
          </div>
          <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>您的身份：</h6>
          </div>
          <div class="hlCnr">           
              <select name="art_cate">
                <volist name="art_cate" id="v">           
                  <option value="{$v.id}">{$v.name}</option> 
                </volist>         
              </select>
           </div>
          </div>
          <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>您的类别：</h6>
          </div>
          <div class="hlCnr">           
              <select name="level_id">
                <volist name="level" id="v">           
                  <option value="{$v.id}">{$v.level_name}</option> 
                </volist>         
              </select>
           </div>
          </div>
          <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>毕业学院：</h6>
          </div>
          <div class="hlCnr">
           <input type="text" name="graduate">
           </div>
          </div>
         <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>主页头像：</h6>
          </div>
          <div class="btnimage fl">选择图片
            <div class="xuanze_showimge"></div>
                            <input type="file"  accept="image/jpg,image/jpeg,image/png" name="self_pic" id="xuanze" class="file" >
                          </div>
                          <div class="xuanze_progress fl mgr15" style="display:none"><img src="__IMAGES__/loadings.gif" width="30" />
                            <span class="xuanze_percent">80%</span>
                          </div>
         </div>
         <div class="ysjglCdiv clearfix">
          <div class="hlCti">
           <h6>半身照片：</h6>
          </div>
          <div class="btnimage fl">选择图片
            <div class="xuanze1_showimge"></div>
                            <input type="file"  accept="image/jpg,image/jpeg,image/png" name="half_pic" id="xuanze1" class="file" >
                          </div>
                          <div class="xuanze1_progress fl mgr15" style="display:none"><img src="__IMAGES__/loadings.gif" width="30" />
                            <span class="xuanze1_percent">80%</span>
                          </div>
         </div>
         </div>
         <div class="ysjglCdiv clearfix">
          <div class="hlCti">
             <h6>个人简介：</h6>
            </div>
          <div class="hlCnr">
            <textarea name="desc"></textarea>
           </div>
          </div>
          <div class="SelNoticeStyle hlCdiv">
            <h4><input type="submit" class="btn btn-primary" value="确认修改"></h4>
          </div>

         </div>
         </form>
        </div>
       </div>  
      </div>
    </div>
          
   </div>      
</div>


  <!--  / user  -->

<!--  / warpper  --> 

<include file="Public/footer" />
<script type="text/javascript" src="__JS__/jquery.js"></script> 
<script type="text/javascript" src="__JS__/uploadPreview.min.js"></script> 

<script type="text/javascript" src="__JS__/jquery-form.js"></script>
  <script type="text/javascript">

    $(function () { 
        var percent = $('.xuanze_percent'); 
        var progress = $('.xuanze_percent');
        $("#xuanze").wrap("<form id='myupload1' action='/Home/Index/addImage' method='post' enctype='multipart/form-data'></form>"); 
        $("#xuanze").change(function(){ //选择文件 
            $("#myupload1").ajaxSubmit({ 
                dataType:  'json', //数据格式为json 
                beforeSend: function() { //开始上传 
                    progress.show(); //显示进度条
                    var percentVal = '0%';
                    percent.html(percentVal);   
                }, 
                uploadProgress: function(event, position, total, percentComplete) { 
                    var percentVal = percentComplete + '%'; //获得进度 
                    percent.html(percentVal); //显示上传进度百分比 
                }, 
                success: function(data) {
                     //成功 
                    console.log(data);
                    var img = '<img src="'+data[0]["savepath"].substr(1)+data[0]["savename"]+'" height="80" ><input type="hidden" name="self_pic" id="logo_pic" value="'+data[0]["savepath"].substr(1)+data[0]["savename"]+'"></input>';
                    $('.xuanze_showimge').html(img);
                    progress.hide();
                }, 
                error:function(xhr){ //上传失败 
                    //console.log(xhr.status)
                } 
            }); 
        });


        var percent1 = $('.xuanze1_percent');
        var progress1 = $('.xuanze1_percent');
        $("#xuanze1").wrap("<form id='myupload' action='{:U('/Home/Index/addImage')}' method='post' enctype='multipart/form-data'></form>");
        $("#xuanze1").change(function(){ //选择文件
            $("#myupload").ajaxSubmit({
                dataType:  'json', //数据格式为json
                beforeSend: function() { //开始上传
                    progress1.show(); //显示进度条
                    var percentVal1 = '0%';
                    percent1.html(percentVal1);
                },
                uploadProgress: function(event, position, total, percentComplete) {
                    var percentVal = percentComplete + '%'; //获得进度
                    percent.html(percentVal); //显示上传进度百分比
                },
                success: function(data) { //成功
                    var img = '<img src="'+data[0]["savepath"].substr(1)+data[0]["savename"]+'" height="80" ><input type="hidden" name="half_pic" id="goods_cap_pic" value="'+data[0]["savepath"].substr(1)+data[0]["savename"]+'"></input>';
                    $('.xuanze1_showimge').html(img);
                    progress.hide();
                },
                error:function(xhr){ //上传失败
                    //console.log(xhr.status)
                }
            });
        });

      
    }); 
    function add_re(r){
        $('#restriction'+r).show();
        }
    function del_re(r){
        $('#restriction'+r).hide();
        }
</script>

</body>

</html>
