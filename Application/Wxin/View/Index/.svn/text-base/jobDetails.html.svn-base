      alert('请先择岗位！');return false;
    }
    $.ajax({
      url:'/Home/Index/jobDetails',
      type:'post',
      data:{zhid:zhid,pic:pic},
      dataType:'json',
      success:function(g){
        console.log(g);
        if(g.status == 1){
          dialog.showTips(g.info,'warn',function(){
            window.location.reload();
          })
        }else if(g.status == 2){
          dialog.showTips(g.info,'warn',function(){
            window.location.href="/Home/User/login";
            return false;
          })
        }else{
          alert(g.info);return false;
        }
      }
    })
  })
</script>
