<include file="Public:footer" />
<script>
 function banzhanDel(obj) {
  if(!confirm('确定删除吗?')){
   return false;
  }

  var id = $(obj).attr('data-id');
  $.ajax({
   url: "{:U('/Wxin/PersonalCenter/banzhanDel')}",
   type: "post",
   dataType: "json",
   data: {
    id: id
   },
   success:function(msg){
    if (msg.status==1){
     alert( msg.info);
     location.reload();
    }else{
     alert( msg.info);
    }
   }
  })


 }

</script>
