$(window).load(function(){
  var widthshijin = $('#dateinfo').width();
  $('.jedatebox').width(widthshijin-2);

})

jeDate({
    dateCell:"#dateinfo",
    format:"YYYY年MM月DD日",
    isinitVal:true,
    isClear:false,
    minDate:"2014-09-19 00:00:00",
    okfun:function(val){alert(val)}
  })

</script>
 <script type="text/javascript">
  function toVaild(){
    var goods_name = $('#goods_name').val();
    if(goods_name == ''){
        alert('作品名不能为空！');
        return false;
    }
  }
</script>