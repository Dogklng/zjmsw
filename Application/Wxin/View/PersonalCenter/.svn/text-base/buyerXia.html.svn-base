<script>
 function timehtml(t, obj) {
  var times = t;
  window.setInterval(function() {
   var d = 0,
           h = 0,
           m = 0,
           s = 0;

   if (t > 0) {
    d = Math.floor(t / (60 * 60 * 24));
    h = Math.floor(t / (60 * 60)) - (d * 24);
    m = Math.floor(t / 60) - (d * 24 * 60) - (h * 60);
    s = Math.floor(t) - (d * 24 * 60 * 60) - (h * 60 * 60) - (m * 60);
   }
   if (d <= 9)
    d = '0' + d;
   if (h <= 9)
    h = '0' + h;
   if (m <= 9)
    m = '0' + m;
   if (s <= 9)
    s = '0' + s;
   if (t>0){
    $(obj).html(d+"天"+h+"小时"+m+"分"+s+"秒");
   }else {
    window.location.reload();
   }
   t--;
  }, 1000);
 }
 $(function() {
  $(".djstime").each(function() {
   var endtime = $(this).attr("data-endtime");
   //var message = $(this).attr("data-msg");
   /*if(!endtime){
    message='暂时没有拍卖';
    $(this).html("<span style='color:#FC2233;'>"+message+"</span>");
    $(this).find('span').css({'font-family':'宋体','font-style':'normal','font-size':'20px'});
    return true;
    }*/
   var nowtime = new Date().getTime();
   var time = (endtime * 1000 - nowtime) / 1000; time = time.toFixed(0);
   if (time <= 0) {
    //window.location.reload();
   } else {
    timehtml(time, this);
   }
  })
 });

 $(function(){
  $('.buyerXia_sec1_fukuan').click(function(){

   //alert($(this).data("id"));
   var id = $(this).data("id");
   window.location.href = '/Wxin/Pm/buy/id/'+id;

