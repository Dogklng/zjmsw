<include file="Public:header" />
<!--  / warpper  -->
<div class="warpper wrapper1" style="margin: 150px auto 80px;">
    <div class="title">
      <div class="line"></div>
      <p class="font_tit1">Shop</p>
      <h5>店 • 铺</h5>
    </div>

    <div class="dianpu_sec1">
      <div class="dianpu_title">
        <div class="dianpu_title_pic">
          <div class="dianpu_title_img"><img src="{$res.logo_pic}" alt="" /></div>
          <div class="dianpu_title_text">
            <h3>{$res.name}</h3>
            <h6>加入时间: {$res.create_at}</h6>
          </div>
        </div>
        <div class="dianpu_title_canyu">
          <ul>
            <li>
              <h3>{$res.fans}</h3>
              <span>粉丝</span>
            </li>
            <li>
              <h3>{$res.browser}</h3>
              <span>访问量</span>
            </li>
            <li>
              <h3>{$res.care}</h3>
              <span>喜欢</span>
            </li>
            <li>
              <h3>{$num}</h3>
              <span>藏品</span>
            </li>
          </ul> 
        </div>
      </div>
    </div>

    <div class="dianpu_sec2">
      <div class="dianpu_xian"><img src="./images/dianpu_bg.gif" alt="" /></div>
      <div class="dianpu_sec2_list">
        <div class="row">
          <volist name="res1" id="v">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="dianpu_sec2_li">
                <div class="dianpu_sec2_img"><a href="{:U('/Home/ArtCommunity/buy',array('id'=>$v['id']))}"><img src="{$v.logo_pic}" alt="" /></a></div>
                <div class="dianpu_cont_text">
                    <h4><span><i class="left"></i>{$v.name}<i class="right"></i></span></h4>
                    <h3 class="dianpu_Price-h3"><span><a href="#">登录</a>可查看价格</span><!--<i>￥</i>800--></h3>
                    <p class="dianpu_small_cont"><!--<span>市场价：</span><i>￥</i>600--> <a href="#">可租赁</a>
                    </p><div class="clear"></div>
                    <p></p>
                    <a href="{:U('/Home/ArtCommunity/buy',array('id'=>$v['id']))}"><div class="htx">  查看详情  </div></a>
                  </div>
              </div>
            </div>
          </volist>
        </div>
      </div>
    </div>     
    <div class="top"> <a class="top_a" href="javascript:goTop();"> <img src="__IMAGES__/top.png"> </a> </div>    
          
</div>
<!--  / warpper  --> 
<include file="Public/footer" />

</body>





</html>
