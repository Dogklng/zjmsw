<script language="javascript">
$(document).ready(function(){
	
	  
  var mySwiper = new Swiper('.swiper-container1',{
    pagination: '.pagination1',
    loop:true,
    grabCursor: true,
	autoplay:5000, 
	spaceBetween: 0,
	slidesPerGroup : 1,//设置几个一切换
	centeredSlides : true, //当前居中
    paginationClickable: true,
	autoplayDisableOnInteraction : false    //用户操作点的时候  停止自动切换
  })
   
	

$(window).scroll(function(){
  
  if($(window).scrollTop()>($('.products_inner_con').offset().top-60)){  
      $('.proinner_nav').addClass('proinner_navon');
      }else{
		  $('.proinner_nav').removeClass('proinner_navon');
		  }
	  	   	
}) 	


$('.show_xzd1').click(function(){
	$('.load_dh').stop(true).fadeIn(600);
	
	setTimeout(function(){
		$('.load_dh').stop(true).fadeOut(600);
		},4000)
	
	})


})


$(window).load(function(e) {
	var height1 = $(".device img").height();
	$(".swiper-container1").css("height",height1)

})

$(window).resize(function(e) {
	var height1 = $(".device img").height();
	$(".swiper-container1").css("height",height1)
})

$(document).ready(function(e) {
	var height1 = $(".device img").height();
	$(".swiper-container1").css("height",height1)

})


</script>
