<script>
$(document).ready(function(e) {
    
	var mySwiper1 = new Swiper('.swiper-container1',{
		loop:true,
		autoplay:5000, 
		spaceBetween: 0,
		paginationClickable: true,
		autopalyDisableOnInteraction:false,
	})
	$('.arrow-left1').on('click', function(e){
		e.preventDefault()
		mySwiper1.swipePrev()
	})
	  
	$('.arrow-right1').on('click', function(e){
		e.preventDefault()
		mySwiper1.swipeNext()
	})
	
	

});

		 
</script>
