<script src="__JS__/swiper.min.js"></script>
<script>
    /*图片高度*/
    function resize(){
        var arr=[];
        var img=document.querySelectorAll('.recommend_box .img img');
        for(var i =0;i<img.length;i++){
            arr.push(img[i].offsetHeight)
        }
        var arr=arr.sort(function(a,b){
            return b-a;
        });
        $('.recommend_box .img').css({height:arr[0]})
    }
    $(window).load(function(){
        resize();
    });

    $(window).resize(function(){
        resize();
    });

    $('#shop').click(function () {
     var member_id = '{$member_id}';
     if(member_id == 0){
         dialog.showTips('请先登录','firm',function () {
             window.location.href="{:U('/Home/User/login')}";
         });
     }else{
         var id = member_id;
         $.post("{:U('Home/ArtCommunity/apply')}",{id:id},function(data) {
             console.log(data.status);
             if (data.status == 0) {
                 window.location.href = "{:U('Home/Shop/seldpsy')}"
             }
             if(data.status == 1)
             {
                 window.location.href = "{:U('Home/Shop/ysjgl')}"
             }
             if(data.status == 2)
             {
                 window.location.href = "{:U('Home/Shop/selCenter')}"
             }
             if(data.status == 3)
             {

                 window.location.href = "{:U('Home/Shop/selAudit')}"
             }
             if(data.status == 4)
            {

                window.location.href = "{:U('Home/Shop/selCompanyCertified')}"
            }
             if(data.status == 5)
            {

                alert(1);return false;
            }
         })
     }
    })

    $('#qzc').click(function(){
          
          dialog.showTips('是否注册！','firm',function(){
            $.ajax({
              url:'/Home/User/zhuce',
              type:'get',
              data:{},
              dataType:'json',
              success: function(g){
                console.log(g);
                if(g.status == 1){
                  window.location.href = '/Home/User/zhuce/';
                }
              }
            })
          })
      })

</script>
