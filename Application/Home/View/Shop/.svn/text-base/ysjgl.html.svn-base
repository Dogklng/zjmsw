<script type="text/javascript">
    $('#btn').click(function(){
        var xuanze2 = $('#pic3').val();
        var index_pic = $('#pic4').val();
        var gallery_index = $('#pic5').val();
        var org_name = $.trim($('#org_name').val());
        var detail = $.trim($('#detail').val());
        var addtime = $.trim($('#addtime').val());
        var desc = $.trim($('#desc').val());
        var style = $('#style option:selected').val();
        var art = $('#art_cate').val();
        if(org_name == ''){
            alert('机构名称不能为空 ！');
            return false;
        }

            if(addtime == ''){
                alert('成立时间不能为空！');
                return false;
            }
            var date=new Date;
            var year=date.getFullYear();


            if(addtime>year){
                alert('成立时间不能晚于当前时间！');
                return false;
            }

            if(detail == ''){
                alert('口号不能为空！');
                return false;
            }


        if(xuanze2 == undefined){
            alert('主页logo片必须上传！');
            return false;
        }

        if(index_pic == undefined){
            alert('背景大图必须上传！');
            return false;
        }

        if(gallery_index == undefined){
            alert('背景图片必须上传！');
            return false;
        }

        if(desc == ''){
            alert('简介不能为空 ！');
            return false;
        }

        $.ajax({
            url:"/Home/Shop/ysjgl",
            dataType:"json",
            type:"post",
            data:{
                logo_pic:xuanze2,
                index_pic:index_pic,
                gallery_index:gallery_index,
                org_name:org_name,
                detail:detail,
                desc:desc,
                style:style,
                shop_at:addtime
            },
            success:function(data){
                if(data.status==1){
                    alert(data.info);
                    window.location.href="/Home/Shop/selAudit";
                    return false;
                }else{
                    alert(data.info);
                    window.location.reload();
                    return false;
                }
            }
        })
    })
