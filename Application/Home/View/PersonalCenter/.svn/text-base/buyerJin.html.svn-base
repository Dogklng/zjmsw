<include file="Public:header" />

<!--  / warpper  -->
<div class="warpper wrapper1" style="margin: 150px auto 80px;"> 
  
  <!--  / user  -->
  
  <div class="user">
    <div class="">
      <div class="row">
        <div class="col-sm-2">
          <include file="Public:user_left" />
        </div>
        <div class="col-sm-10">
          <div class="buyerJin">
            
            <div class="buyerJin_list">
              <div class="buyerJin_sec1">


                <div class="buyerXia_sec1_li">
                  <h5><span>浙江美术网</span></h5>
                </div>
                <volist name="pm" id="v" empty="暂无数据">
                  <div class="buyerJin_sec1_li">
                    <h5><span>浙江美术网</span></h5>
                    <table>
                      <tr>
                        <th class="buyerJin_sec1_li_frist" style="width:40%;">作品名称</th>
                        <th style="width:15%;">保证金(元)</th>
                        <th style="width:10%;">状态</th>
                        <th style="width:20%;">时间</th>
                        <th style="width:15%;">操作</th>
                      </tr>
                        <tr>
                          <td class="buyerJin_sec1_li_frist"><a class="user_proa" href="{:U('/Home/Pm/pmxq/id')}/{$v.goods_id}"><img src="{$v.logo_pic}" width="100"><span>{$v.goods_name}</span></a></td>
                          <td>{$v.baoding}</td>
                          <td>
                            <if condition="$v.order_status eq 0">
                              未缴纳
                            <elseif condition="$v.order_status eq 1"/>
                              已缴纳
                            <else/>
                              已退款
                          </if>

                          </td>
                          <td>{$v['order_time']|date='Y-m-d H:i:s',###}</td>
                          <td>
                            <a href="{:U('/Home/PersonalCenter/buyerJinDetails/tag/buyerJin/baoding')}/{$v['id']}/value/2">查看保证金</a><br />
                            <if condition="$v.order_status eq 0"><a href="{:U('/Home/Pm/pmxq_bzjT/dingid')}/{$v['id']}/value/2">缴纳保证金</a></if>
                          </td>
                        </tr>

                    </table>  
                  </div>

                </volist>
                </div>
              <div class="pages">
                {$page}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!--  / user  --> 
  
</div>
<!--  / warpper  -->

<include file="Public/footer" />

</body>
<script>
  function fnTabBoxSlide(Focus,Hide,Show){
    $(Focus).siblings().removeClass("actived");
    $(Focus).addClass("actived");
    $(".TabHide"+Hide).hide();
    $("#TabShow"+Show).slideDown("fast");
};

</script>
</html>
