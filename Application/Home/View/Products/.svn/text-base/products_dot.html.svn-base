            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }
        var cate = $('#cate').val();
        var goods_id = $('input[name=id]').val();
        if(cate == ''){
            alert("标签不能为空！");
            return false;
        }
