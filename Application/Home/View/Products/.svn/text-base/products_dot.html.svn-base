            dialog.showTips("添加数量不能大于库存", "warn");
            return false;
        }
        var is_reed = 0;
        var reed_id = 0;
        var artists_id = "{$_GET['artists_id']}";
        if(artists_id){
            is_reed = 1;
            reed_id = artists_id;
        }
        $.ajax({
            url:"{:U('/Home/Products/addCart')}",
            type:'post',
            data:{
                goods_id:goods_id,
                num:num,
                cstore:cstore,
                type:2,
                is_reed:is_reed,
                reed_id:reed_id,
            },
            dataType:'json',
            success:function(g){
                if(g.status == 1){
                    $(".cart_count_num").text(g.cartnum);
                    dialog.showTips(g.info, "firm", function () {
                        window.location.href=g.url;
                    });
                }else{
                    alert(g.info);
                }
            }
        });

    })


  

  


 

	
 
  </script>
