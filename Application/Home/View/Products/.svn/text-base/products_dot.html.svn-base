<script>
    $('.nowbuy').click(function(){
        var headimg = "{$headimg}";
        if(headimg){
            var nums = parseInt($('.numbe_i').val());
            $('#buyform #nums').val(nums);
            var cstore = parseInt('{$res.store}');
            if(!cstore||cstore<=0){
                dialog.showTips("商品库存不足", "warn");
                return false;
            }
            if(!nums||nums<=0){
                dialog.showTips("购买数量不能为空", "warn");
                return false;
            }
            if(nums>cstore){
                dialog.showTips("购买数量不能大于库存", "warn");
                return false;
            }
            //判断是否有店铺的id 有就是店铺推荐产品
            var artists_id = '{$artists_id}' ;
            if(artists_id != 0){
                $('#artists_id').val(artists_id);
            }
            var is_reed = 0;
            var reed_id = 0;
            var artists_id = "{$_GET['artists_id']}";
            if(artists_id){
                is_reed = 1;
                reed_id = artists_id;
            }
            $('input[name="is_reed"]').val(is_reed);
            $('input[name="reed_id"]').val(reed_id);
            $('#buyform').submit();
        }else {
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }

    });
</script>
<script type="text/javascript">
    $(function(){
        $('[data-type="checkbox"]').click(function(){
            var data_value = $(this).attr('data-value'),
                txtalso = $.trim($(".label-input").val());
            if($(this).prop("checked")) {
                if(txtalso.length > 0) {
                    if(txtalso.indexOf(data_value+',') != -1) {
                        return ;
                    } else {
                        txtalso += data_value + ',';
                    }
                } else {
                    txtalso = data_value+',';
                }
            } else {
                if(txtalso.indexOf(data_value+',') != -1) {
                    txtalso = txtalso.replace(data_value+',', '');
                }
            }
            $(".label-input").val(txtalso);
        });
    });
</script>

<script>


    $('#discuss').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }else{
            var name = $('#name').val();
            var email = $('#email').val();
            var phone = $('#phone').val();
            var cz = $('#cz').val();
            var content = $('#content').val();
            if(name==""){
                alert("姓名必填");
                return false;
            }
            if(email==""){
                alert("邮箱必填");
                return false;
            }
            var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
            if (!myreg.test(email)) {
                alert("请输入有效的邮箱！");
                return false;
            }
            if(phone==""){
                alert("手机号码必填！");
                return false;
            }
            if (!phone.match(/^1[345789][0-9]{9}$/)) {
                alert("手机号码格式错误！");
                return false;
            }
            if(cz==""){
                alert("传真必填");
                return false;
            }
            if(content==""){
                alert("留言必填");
                return false;
            }
            $.ajax({
                url: "{:U('/Home/Products/addComment')}",
                type: "post",
                dataType: "json",
                data: {
                    name: name,
                    email:  email,
                    phone:  phone,
                    cz:cz,
                    content: content,
                }
            }).done(function (g) {
                if (g.status == 1) {
                    alert(g.info);
                    window.location.reload();
                } else {
                    alert(g.info);
                }

            })
        }

    })


