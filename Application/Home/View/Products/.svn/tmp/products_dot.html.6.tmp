<script type="text/javascript">
    $(function(){
        $('[data-type="checkbox"]').click(function(){
            var data_value = $(this).attr('data-value'),
                txtalso = $.trim($(".label-input").val());
            if($(this).prop("checked")) {
                if(txtalso.length > 0) {
                    if(txtalso.indexOf(data_value+',') != -1) {
                        return ;
                    } else {
                        txtalso += data_value + ',';
                    }
                } else {
                    txtalso = data_value+',';
                }
            } else {
                if(txtalso.indexOf(data_value+',') != -1) {
                    txtalso = txtalso.replace(data_value+',', '');
                }
            }
            $(".label-input").val(txtalso);
        });
    });
</script>

<script>


    $('#discuss').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            alert("请先登录，再来评论");
            return false;
        }else{
            var name = $('#name').val();
            var email = $('#email').val();
            var phone = $('#phone').val();
            var cz = $('#cz').val();
            var content = $('#content').val();
            if(name==""){
                alert("姓名必填");
                return false;
            }
            if(email==""){
                alert("邮箱必填");
                return false;
            }
            var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
            if (!myreg.test(email)) {
                alert("请输入有效的邮箱！");
                return false;
            }
            if(phone==""){
                alert("手机号码必填！");
                return false;
            }
            if (!phone.match(/^1[345789][0-9]{9}$/)) {
                alert("手机号码格式错误！");
                return false;
            }
            if(cz==""){
                alert("传真必填");
                return false;
            }
            if(content==""){
                alert("留言必填");
                return false;
            }
            $.ajax({
                url: "{:U('/Home/Products/addComment')}",
                type: "post",
                dataType: "json",
                data: {
                    name: name,
                    email:  email,
                    phone:  phone,
                    cz:cz,
                    content: content,
                }
            }).done(function (g) {
                if (g.status == 1) {
                    alert(g.info);
                    window.location.reload();
                } else {
                    alert(g.info);
                }

            })
        }

    })


    $('.button-add').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            alert("请先登录！");
            return false;
        }
        var cate = $('#cate').val();
        var goods_id = $('input[name=id]').val();
        if(cate == ''){
            alert("标签不能为空！");
            return false;
        }
        $.ajax({
            url: "{:U('/Home/Products/addCate')}",
            type: "post",
            dataType: "json",
            data: {
                name:cate,
                goods_id:goods_id
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
            } else {
                alert(g.info);
            }

        })
    })

