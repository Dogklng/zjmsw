    function disfun() {
        location.href="{:U('/Home/Pm/paimaiS')}?cate";
    }

    function ruzhu() {
        var member_id = '{$name}';
        if(member_id == 0){
            alert('请先登录！');
            return false;
        }

        $.ajax({
            url: "{:U('/Home/Pm/isRuZhu')}",
            type: "get",
            dataType: "json",
            data:'',
            success:function(msg){
                //console.log(msg);
                if (msg.status==1){
                    alert( msg.info);
                    return false;
                }else{
location.href="{:U('Home/Pm/paimaiRuzhu')}";
                }
            }
        })
    }


    $('#btn').click(function () {

        var member_id = '{$name}';
        if(member_id == 0){
            alert('请先登录！');
            return false;
        }

        var name = $.trim($('#name').val());
        var tel  = $.trim($('#tel').val());
        var num_id   = $('#num_id').val();
        if(name == ""){
            alert('姓名必填');
            return false;
        }
        if(tel == ''){
            alert('手机号必填');
            return false;
        }
        if(!(/^1[34578]\d{9}$/.test(tel))){
            alert('请输入正确的手机号');
            return false;
        }
        $.ajax({
            url: "{:U('/Home/Pm/addRemind')}",
            type: "post",
            dataType: "json",
            data: {
                name: name,
                tel:  tel,
                num_id:num_id
            },
            success:function(msg){
                //console.log(msg);
                if (msg.status==1){
                    $('.relation_con').removeClass('relation_con_on');
                    $('.relation').stop(true).fadeOut(1000);
                    alert( msg.info);
                }else{
                    alert( msg.info);
                }
            }
        })
    })


    function myFunction(obj) {
        var id = obj.id;
        $('#goods_id').val(id);
    }

</script>


