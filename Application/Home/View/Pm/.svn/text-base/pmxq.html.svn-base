<script>

    $(".jian").click(function () {
        var gm_num = $(this).next().find("input").val();
        if(gm_num <= 0){
            gm_num=1;
            $(this).next().find("input").val(gm_num);
        }
        if (gm_num >= 1) {
            gm_num-=1;
            if(gm_num <= 0){
                gm_num=1;
            }

            $(this).next().find("input").val(gm_num);
        }
    })
    $(".jia").click(function () {
        var gm_num2 = parseInt($(this).prev().find("input").val());
        if(gm_num2 < 1000){
            gm_num2 += 100;
            $(this).prev().find("input").val(gm_num2);
        }else {
            gm_num2 += 10;
            $(this).prev().find("input").val(gm_num2);
        }
    })

</script>

