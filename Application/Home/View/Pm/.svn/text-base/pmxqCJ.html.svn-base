<script>
    $(".jpxz_right").click(function () {
        var chujia = $(".gm_num_txt").val();
        var id = "{$res.id}";
        $.ajax({
            type: "post",
            url: "{:U('/Home/Pm/chuJia')}",
            data: {"jiage":chujia,'goods_id':id},//提交表单，相当于CheckCorpID.ashx?ID=XXX
            success: function(msg){
                if (msg.status==2){
                    alert( msg.info );
                    location.reload();
                }else{
                    $('.dangqian').text("¥"+ msg.info.dangqian);
                    alert( msg.info.err);
                }
            }
        });

    })
</script>


