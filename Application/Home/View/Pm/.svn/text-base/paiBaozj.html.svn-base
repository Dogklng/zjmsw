<script>
	$(document).ready(function(){
		
		$('#payZ').click(function(){
			
			var pay_type = $(".order_sh .pro_xz input[name='pay_type']").val();
			$.ajax({
				url:'/Home/Pm/paiBaozj',
				type:'post',
				data:{type:pay_type},
				dataType:'json',
				success: function(g){
					//console.log(g);
					if(g.status == 1){
						dialog.showTips("是否支付", "firm",function(){
							window.location.href = g.url;
						});
					} else if(g.status == 2) {
                        //dialog.showTips(g.info, "firm", function () {
                        window.location.href=g.url;
                        //});
                    }else if(g.status == 3){
                        order_id = g.order_id;
                        //console.log(g.url);
                        $('#weixin_erweima').attr('src', g.url);
                        $('.wxzf-box').stop(true).fadeIn(1000);
                        setTimeout(function () {
                            $('.dizhi_con_weixin').addClass('dizhi_con_on');
                        }, 200)
                        int = setInterval(function () {
                            $.post("{:U('Home/Pm/order_status')}", {order_id: order_id,type:2},
                                function (g) {
                                    if (g.status == 1) {
                                        window.location.href = g.url;
                                    }
                                })
                        }, 1000);
                    }else if(g.status == 4){
                        window.location.href=g.info;
                    }else{
						alert(g.info);
						return false;
					}
				}
				
			})
		})
	})
</script>