<script>
    $('.nowbuy').click(function(){
        var headimg = "{$headimg}"
        if(headimg){
            var kucun = parseInt($('#kucun').val());
            if(!kucun){
                dialog.showTips("商品库存不足", "warn");
                return false;
            }
            $('#buyform').submit();
        }else {
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }
    });
</script>
<script>
    $('#discuss').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }else{
            var name = $('#name').val();
            var email = $('#email').val();
            var phone = $('#phone').val();
            var cz = $('#cz').val();
            var content = $('#content').val();
            if(name==""){
                alert("姓名必填");
                return false;
            }
            if(email==""){
                alert("邮箱必填");
                return false;
            }
            var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
            if (!myreg.test(email)) {
                alert("请输入有效的邮箱！");
                return false;
            }
            if(phone==""){
                alert("手机号码必填！");
                return false;
            }
            if (!phone.match(/^1[345789][0-9]{9}$/)) {
                alert("手机号码格式错误！");
                return false;
            }
            if(cz==""){
                alert("传真必填");
                return false;
            }
            if(content==""){
                alert("留言必填");
                return false;
            }
            $.ajax({
                url: "{:U('/Home/Products/addComment')}",
                type: "post",
                dataType: "json",
                data: {
                    name: name,
                    email:  email,
                    phone:  phone,
                    cz:cz,
                    content: content,
                }
            }).done(function (g) {
                if (g.status == 1) {
                    alert(g.info);
                    window.location.reload();
                } else {
                    alert(g.info);
                }

            })
        }

    })
    //收藏


    //推荐




    //加入购物车
    $('.addCart').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }
        var goods_id = '{$res.id}';
        var num = 1;
        $.ajax({
            url: "{:U('/Home/Products/addCart')}",
            type: "post",
            dataType: "json",
            data: {
                goods_id:goods_id,
                num:num,
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
            } else {
                alert(g.info);
            }

        })
    })


    $('.button-add').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }
        var cate = $('#cate').val();
        if(cate == ''){
            alert("标签不能为空！");
            return false;
        }
        $.ajax({
            url: "{:U('/Home/Products/addCate')}",
            type: "post",
            dataType: "json",
            data: {
                name:cate,
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
            } else {
                alert(g.info);
            }

        })
    })
</script>
