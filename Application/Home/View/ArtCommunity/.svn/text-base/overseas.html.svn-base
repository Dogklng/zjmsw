<script>
    $('.main_page span').click(function () {
        var page = $(this).attr('data-page');
        if(!isNaN(page)){
            window.location.href = "{:U('/Home/ArtCommunity/overseas')}?page="+page;
        }
    })
    function myFunction(obj) {
        var id = obj.id;
        $('#train_id').val(id);
    }

    $('.zlxxtj').click(function () {
        var member_id = '{$member_id}';
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }
        var name = $.trim($('#name').val());
        var tel  = $.trim($('#tel').val());
        var train_id   = $('#train_id').val();
        if(name == ""){
            alert('姓名必填');
            return false;
        }
        if(tel == ''){
            alert('手机号必填');
            return false;
        }
        if(!(/^1[34578]\d{9}$/.test(tel))){
            alert('请输入正规手机号');
            return false;
        }
        $.ajax({
            url: "{:U('/Home/ArtCommunity/addTrain')}",
            type: "post",
            dataType: "json",
            data: {
                name: name,
                tel:  tel,
                train_id:train_id,
                type:2
            }
        }).done(function (g) {
            if (g.status == 1) {
                alert(g.info);
              window.location.reload();
            } else {
                alert(g.info);
            }

        })
    })
</script>
