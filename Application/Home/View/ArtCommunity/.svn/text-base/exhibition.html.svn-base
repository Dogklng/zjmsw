<script>
    $('.main_page span').click(function () {
        var page = $(this).attr('data-page');
        if(!isNaN(page)){
            window.location.href = "{:U('/Home/ArtCommunity/exhibition')}?page="+page;
        }
    })
    function zhan(obj) {
        var member_id = '{$name}';
        var val = $(obj).attr('data-id');
        if(member_id == 0){
            dialog.showTips("请先注册，若有账号，请先登录！", "",'/Home/User/login');
            return false;
        }

        if (val==1){
            //alert(val);
            window.location.href="{:U('/Home/ArtCommunity/exhibitors')}";
        }else {
            //alert(val);
            window.location.href="{:U('/Home/ArtCommunity/upExhibitors')}";
