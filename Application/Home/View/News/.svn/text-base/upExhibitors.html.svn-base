        if(len>1){
            if (county=='市、县级市'){
                alert('市、县级市必选');
                $('#s_county').focus();
                return false;
            }
        }*/

        //console.log(county);return false;
        $.ajax({
            url: "{:U('/Home/ArtCommunity/upExhibitors')}",
            type: "post",
