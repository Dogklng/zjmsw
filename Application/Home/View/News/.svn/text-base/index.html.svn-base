<!--  / warpper  -->
<div class="warpper wrapper1 wrapper_s1">
  <div class="title">
    <div class="line"></div>
    <p class="font_tit1">{$newsCates.ename}</p>
    <h5>{$newsCates.name|msubstr=0,1,'utf-8',false} • {$newsCates.name|msubstr=1,1,'utf-8',false} • {$newsCates.name|msubstr=2,1,'utf-8',false} • {$newsCates.name|msubstr=3,1,'utf-8',false} </h5>
  </div>
  <div class="news">
    <div class="news_fl">
      <div class="tab-controls">
        <volist name="newsCate" id="val">
          <a href="/News.html?type={$val.id}" class="<eq name="_GET['type']" value="$val.id">active</eq> tabs_a fl">{$val.name}</a>
        </volist>
        <a href="{:U('/Home/News/exhibition')}"  style="color: #000000">展览展讯</a>
        <a href="/hall.html"  style="color: #000000">3D展厅</a>
        <a href="/contest.html" style="color: #000000">大赛征稿</a></li>
        <a href="/video.html" style="color: #000000">视频</a></li>
    </div>
    <div class="pagebox clearfix">
      <section class="page0 page active clearfix">
        <div class="main">
          <volist name="news" id="v">
          <div class="col-lg-3 col-md-3 col-sm-4">
            <div class="pin"> <a target="_blank" href="/Newsdot.html?id={$v['id']}">
              <div class="box" style="height: 400px;width: 200px;">
                <p class="cont_date_p"><span><b>{$v.addtime|date="Y-m-d",###}</b></span></p>
                <h3>{$v.title}</h3>
                <p class="cont_describe1">{$v.detail}</p>
                <p class="cont_img1"><span class="cont_img1_hd"><img src="{$v.news_pic}" style="height: 150px;" alt=""></span></p>
              </div></a> </div>
          </div>
          </volist>
          <div class="clear"></div>
        </div>

        <div class="main_page">
          {$page}
        </div>
      </section>
    </div>
  </div>
  <div class="top"> <a class="top_a" href="javascript:goTop();"> <img src="__IMAGES__/top.png"> </a> </div>
</div>
</div>
